# Default Options
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias history=' history'
alias perldoc='perldoc -i'

# One Char Aliases
alias a=bat
alias c=pwd
alias d='diff -c'
alias e=$EDITOR
alias f=file
alias g=git
alias j=jobs
alias l=exa
alias m=make
alias n=view_under.pl
alias p=less
alias s=screen
alias h=which

alias pc='LESS="$LESS -x -e " less -R'
alias pa='LESS="$LESS -F -X -e" less -F'
alias pe='vim -'
alias pd=perldoc
alias em=emacs

# git
alias gtop='cd $(git topdir)'
alias gs='g st'
alias gf='g f'

# ls
alias ls='exa'
alias ll='exa -l'
alias la='exa -a'

# http
alias GET="lwp-request -m GET"
alias POST="lwp-request -m POST"
alias HEAD="lwp-request -m HEAD"

# memorandum
alias clear_dns_caache="sudo killall -HUP mDNSResponder" # http://support.apple.com/kb/HT5343?viewlocale=ja_JP&locale=ja_JP

# script
alias calcsum='awk '\''{sum+=$1}END{print sum}'\'
alias mono=/Library/Frameworks/Mono.framework/Versions/Current/bin/mono
