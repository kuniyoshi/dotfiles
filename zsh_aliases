# Default Options
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias history=' history'
alias perldoc='perldoc -i'
alias prove='prove -Ilib'
alias mp3gain="mp3gain -r -c -k"

# One Char Aliases
alias a=cat
alias c=pwd
alias d='diff -c'
alias e=$EDITOR
alias f=file
alias g=git
alias j=jobs
alias l=ls
alias p=less
alias s=screen

alias pc='LESS="$LESS -x -e " less -R'
alias pa='LESS="$LESS -F -X -e" less -F'
alias pe='vim -'
alias pd=perldoc
alias em=emacs
alias watch_perl='watch_runner -makeprg=perl -beforemake=clear -aftermake='\''echo ... at $(date +%H:%M:%S)'\'
alias eman='erl -man'
alias gtop='cd $(git topdir)'
alias calcsum='awk '\''{sum+=$1}END{print sum}'\'
#alias perl='echo -e Use erlang!!! "\n"'

source $0.$OSTYPE

