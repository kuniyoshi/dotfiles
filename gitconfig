[color]
	ui = auto
[alias]
	ap = add -p
	br = branch
	ci = commit
	co = checkout
	cop = checkout -p
	di = diff
	dica = diff --cached
	dicw = diff --color-words
	dicwhf = diff --color-words HEAD FETCH_HEAD
	dihf = diff HEAD FETCH_HEAD
	dino = diff --name-only
	ds = diff --staged
	f = fetch
	g = grep
	h = help
	l = log --decorate --numstat --summary
	ll = log --decorate --numstat --summary --pretty=fuller -p
	nbr = checkout -b
	ol = log --oneline --decorate
	sh = show
	shcw = show --color-words
	st = status
	sw = checkout
	u = fetch . $(select-git-refspec)
	unap = reset -p
	wll = log --decorate --numstat --summary --pretty=fuller -p --word-diff
	xa = stash apply
	xd = stash drop
	xi = stash save
	xl = stash list
	xo = stash pop
	xp = stash show -p
	xs = stash show
[user]
	name = Kuniyoshi Koji
	email = kuniyoshi.kouji@gmail.com
[core]
	excludesfile = ~/.gitignore
	pager = delta
	editor = vim
	autocrlf = input
[interactive]
	diffFilter = delta --color-only
[push]
	default = simple
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[pull]
	ff = only
[fetch]
	prune = true
	pruneTags = true
[init]
	defaultBranch = main
[delta]
	navigate = true    # use n and N to move between diff sections
	light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)

